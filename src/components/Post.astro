---
import UserIcon from "../assets/user-icon.png";
import Retweet from "../assets/retweet.png"
import Comment from "../assets/comment.png"
import Like from "../assets/like.png"
import Stats from "../assets/statistics.png"
import Save from "../assets/save.png"
import Upload from "../assets/upload.png"

const {user, content, contentMedia, img} = Astro.props;
const userNumber = Math.round((Math.random() * 100) + 1);
---

<div class="flex gap-2 p-3 text-white border-solid border-0 border-t border-gray-700">
    <img class="h-9 w-9 rounded-2xl" src={img || UserIcon.src} alt="">
    <div class="flex flex-col w-full mr-5">
        <div class="flex justify-between">
            <div class="flex gap-4">
                <p>{user}</p>
                <p class="text-gray-700">{"@" + user + userNumber}</p>
            </div>
            <p>...</p>
        </div>
        <div class="flex flex-col p-1">
            <p>{content}</p>
            <img class="mt-2 rounded-2xl" src={contentMedia} alt="">
            <div class="flex justify-evenly mt-4">
                <img class="h-4 w-4" src={Comment.src} alt="">
                <img class="h-5 w-5" src={Retweet.src} alt="">
                <img class="h-4 w-4" src={Like.src} alt="">
                <img class="h-4 w-4" src={Stats.src} alt="">
                <div class="flex gap-2 justify-center items-center">
                    <img class="h-4 w-4" src={Save.src} alt="">
                <img class="h-4 w-4" src={Upload.src} alt="">
                </div>
            </div>
        </div>
    </div>
    
</div>