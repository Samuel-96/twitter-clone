---
import Joker from "../assets/joker.png"
import Sadeas from "../assets/sadeas.webp"
import Messenger from "../assets/messenger.jpg"
import Arrow from "../assets/arrow.png"

---
<div class="hidden rounded-3xl mt-48 items-center  sticky z-10 top-10 mx-auto bg-purple w-max p-1 gap-2 cursor-pointer">
    <a href="/twitter-clone" class="flex p-1 text-white">
        <img class="h-8 w-8" src={Arrow.src} alt="">
        <div class="flex flex-row items-center">
            <img class="h-10 w-10 ml-2 -mr-2  rounded-2xl" src={Joker.src} alt="">
            <img class="h-10 w-10 -mr-2 rounded-2xl" src={Sadeas.src} alt="">
            <img class="h-10 w-10 -mr-2 rounded-2xl" src={Messenger.src} alt="">
            <p class="ml-3 mr-2">See new posts</p>
        </div>
    </a>
</div>