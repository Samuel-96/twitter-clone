---
import UserIcon from "../assets/messenger.jpg";
const {user, puntos, boton, img} = Astro.props;

---

<div class="flex p-2 rounded-3xl hover:bg-gray-800 mt-5 text-center items-center w-full justify-between"> 
    <div class="flex items-center gap-6 justify-items-center">
        <img class="h-10 w-10 rounded-2xl " src={img || UserIcon.src} alt="">
        <div class="flex flex-col gap-3 text-sm -ml-5">
            <p class="font-bold">{user}</p>
            <p class="text-gray-600">{"@" + user}</p>
        </div>
    </div>
    <button class="bg-white text-black p-2 w-24 text-center ml-5 rounded-3xl font-bold">{boton}</button>
</div>